<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_comprobacion_honorarios_partidas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/color_fondo"
        android:orientation="vertical"
        tools:context="mx.com.sybrem.appbiochem.ComprobacionHonorariosPartidass">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="3">

            <TableRow>
                <TextView
                    android:text=""
                    />
            </TableRow>


            <TableRow>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="Salir"
                    android:id="@+id/btnSalir"
                    android:background="@drawable/buttonstylesalir"
                    android:textColor="#FFFFFF"
                    android:ems="5"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonStyleSmall"
                    android:text="@string/btn_enviar"
                    android:id="@+id/btnSaved"
                    android:background="@drawable/buttonstylesiguiente"
                    android:textColor="#FFFFFF"
                    android:ems="5"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:text=""
                    />
            </TableRow>

        </TableLayout>


        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partidas de la OC"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dip"
            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/partida1"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProveedor1"
            android:text="Proveedor: " />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteProveedor1"
            android:ems="20"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:background="@drawable/edittextstyle"/>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rfc_del_proveedor"
            android:id="@+id/txtRfc1" />


        <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:id="@+id/edtRfc1"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittextstyle"
                    android:textSize="20dp"/>-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFechaEmision1"
            android:text="Fecha Emision" />

        <TextView
            android:id="@+id/textview1"
            android:text="_/_/_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstylesincronizar"
            android:drawableTop="@drawable/ic_calendar"
            android:onClick="showDatePickerDialog"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMonto1"
            android:text="Monto" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:id="@+id/edtMonto1"
            android:layout_margin="10dp"
            android:background="@drawable/edittextstyle"
            android:inputType="numberDecimal"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHM1"
            android:text="Hora:Minuto:Segundo" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:id="@+id/edtHoraMinuto1"
            android:layout_margin="10dp"
            android:background="@drawable/edittextstyle"
            android:inputType="datetime"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFolio"
            android:text="Folio Fiscal" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:id="@+id/edtFolio"
            android:layout_margin="10dp"
            android:background="@drawable/edittextstyle"
            android:inputType="text"
            android:textSize="20dp"/>

    </LinearLayout>

</ScrollView>